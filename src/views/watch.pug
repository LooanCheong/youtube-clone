extends base

block content
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range", step="1", value=0, min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range", step="0.01", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        p.video__title=video.title
        small.video__owner
            a(href=`/users/${video.owner._id}`)
                img.video__owner-avatar(src="/" + video.owner.avatarUrl)
            a.video__owner-name(href=`/users/${video.owner._id}`)=video.owner.username
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {year: 'numeric', month: 'long', day: 'numeric'}) + " 업로드"
        if String(video.owner._id) === String(loggedInUser._id)
            div.video__controller
                a.edit-video(href=`${video.id}/edit`) Edit Video &rarr;
                a.delete-video(href=`${video.id}/delete`) Delete Video &rarr;
    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea#textarea(cols="30", rows="10", placeholder="Write a Comment")
                button Add Comment
    div.video__comments
        span#video__comments-count=video.comments.length + '개의 댓글'
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    img.video__comment-avatar(src="/" + comment.owner.avatarUrl)
                    span  #{comment.text}
                    if String(comment.owner._id) === String(loggedInUser._id)
                        span#commentDeleteBtn.video__comment-delete ❌

block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js") 